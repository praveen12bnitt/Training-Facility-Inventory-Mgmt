<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.0.3.xsd">

	<http auto-config="true">
	    
	    <intercept-url pattern="/images/**" access="" filters="none"/>
	    <intercept-url pattern="/css/**" access="" filters="none"/>
	    <intercept-url pattern="/createtransaction/**" access="ROLE_USER"  />
	    <intercept-url pattern="/auth/welcome.form" access="ROLE_USER"  />
		<form-login login-processing-url="/auth/j_spring_security_check" login-page="/auth/auth.form" default-target-url="/createtransaction/issue.form?transactionTypeId=ISSUE_UNIFORM_STUDENT"
			authentication-failure-url="/auth/authfailed.form" />
		<logout logout-success-url="/auth/logout.form" />
	</http>

	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				
				users-by-username-query="
					select username,password, enabled 
					from users where USERNAME=?" 
				
				authorities-by-username-query="
					select u.username, ur.authority from users u, user_roles ur 
					where u.user_id = ur.user_id and u.username =?  " 
					
			/>
		</authentication-provider>
	</authentication-manager>

</beans:beans>